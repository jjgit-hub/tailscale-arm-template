{
    "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
    "handler": "Microsoft.Azure.CreateUIDef",
    "version": "0.1.2-preview",
    "parameters": {
        "basics": [
            {
                "name": "adminUsername",
                "type": "Microsoft.Compute.UserNameTextBox",
                "label": "Username",
                "toolTip": "Admin username for the machines",
                "osPlatform": "Linux",
                "constraints": {
                    "required": true
                }
            },
            {
                "name": "SSHCredentials",
                "type": "Microsoft.Compute.CredentialsCombo",
                "label": {
                  "authenticationType": "Authentication type",
                  "password": "Password",
                  "confirmPassword": "Confirm password",
                  "sshPublicKey": "SSH public key"
                },
                "toolTip": {
                    "authenticationType": "Authentication Type for the Virtual Machines",
                    "password": "Password for the Virtual Machines",
                    "sshPublicKey": "SSH Public Key for the Virtual Machines"
                },
                "constraints": {
                  "required": true
                },
                "options": {
                  "hideConfirmation": false,
                  "hidePassword": false
                },
                "osPlatform": "Linux",
                "visible": true
              }
        ],
        "steps": [
            {
                "name": "networkConfig",
                "label": "Network settings",
                "elements": [
                    {
                        "name": "virtualNetwork",
                        "type": "Microsoft.Network.VirtualNetworkCombo",
                        "label": {
                            "virtualNetwork": "Virtual network",
                            "subnets": "Subnets"
                        },
                        "toolTip": {
                            "virtualNetwork": "",
                            "subnets": ""
                        },
                        "defaultValue": {
                            "name": "tailscaleVnet",
                            "addressPrefixSize": "/28"
                        },
                        "constraints": {
                            "minAddressPrefixSize": "/28"
                        },
                        "options": {
                            "hideExisting": false
                        },
                        "subnets": {
                            "tsSubnet": {
                                "label": "tailscale subnet",
                                "defaultValue": {
                                    "name": "tailscale",
                                    "addressPrefixSize": "/28"
                                },
                                "constraints": {
                                    "required": true,
                                    "minAddressPrefixSize": "/28",
                                    "minAddressCount": 4,
                                    "requireContiguousAddresses": false
                                }
                            }
                        },
                        "visible": true
                    }
                ]
            },
            {
                "name": "tailscale",
                "label": "tailscale Configuration",
                "elements": [
                    {
                        "name": "vmSizeSelector",
                        "type": "Microsoft.Compute.SizeSelector",
                        "label": "Size",
                        "toolTip": "",
                        "recommendedSizes": ["Standard_B1ls"],
                        "constraints": {
                            "allowedSizes": [
								"Standard_B1ls",
                            	"Standard_B1s",
                            	"Standard_B2s",
                                "Standard_D2s_v5",
                                "Standard_D4s_v5",
                                "Standard_D8s_v5",
                                "Standard_D2s_v4",
                                "Standard_D4s_v4",
                                "Standard_D8s_v4",
                                "Standard_D4s_v3",
                                "Standard_D8s_v3"
                            ],
                            "excludedSizes": []
                        },
                        "options": {
                            "hideDiskTypeFilter": false
                        },
                        "osPlatform": "Linux",
                        "imageReference": {
                            "publisher": "Canonical",
                            "offer": "UbuntuServer",
                            "sku": "18.04-LTS"
                        },
                        "count": 1,
                        "visible": true
                    },
                    {
                        "name": "tsVmName",
                        "type": "Microsoft.Common.TextBox",
                        "label": "Virtual Machine Base Name",
                        "toolTip": "The Base Name of the Virtual Machine",
                        "defaultValue": "tailscale",
                        "constraints": {
                            "required": true,
                            "regex": "^[a-z0-9A-Z-]{3,79}$",
                            "validationMessage": "The VM Name must be between 3 and 79 characters long and contain letters, numbers and hyphens only."
                        }
                    },
                    {
                        "name": "tsPreAuthKey",
                        "type": "Microsoft.Common.PasswordBox",
                        "label": {
                          "password": "tailscale Pre-Auth Key",
                          "confirmPassword": "Confirm password"
                        },
                        "toolTip": "The tailscale Pre-Auth Key. Auth key page https://login.tailscale.com/admin/authkeys",
                        "constraints": {
                          "required": false
                        },
                        "options": {
                          "hideConfirmation": true
                        },
                        "visible": true
                    },
                    {
                        "name": "tsRoutedSubnets",
                        "type": "Microsoft.Common.TextBox",
                        "label": "tailscale Routed Subnets",
                        "toolTip": "The list of the subnets routed through this tailscale gateway or blank for none. Ex. 192.168.0.0/24,10.0.34.0/24"
                    }
                ]
            },
            {
                "name": "tags",
                "label": "Tags",
                "elements": [
                    {
                        "name": "tagsByResource",
                        "type": "Microsoft.Common.TagsByResource",
                        "resources": [
                            "Microsoft.Network/virtualNetworks",
                            "Microsoft.Network/networkInterfaces",
                            "Microsoft.Network/publicIpAddresses",
                            "Microsoft.Storage/storageAccounts",
                            "Microsoft.Compute/virtualMachines"
                        ]
                    }
                ]
            }
        ],
        "outputs": {
            "location": "[location()]",
            "adminUsername": "[basics('adminUsername')]",
            "authenticationType": "[basics('SSHCredentials').authenticationType]",
            "adminPasswordOrKey": "[coalesce(basics('SSHCredentials').password, basics('SSHCredentials').sshPublicKey)]",
            "virtualNetwork": "[steps('networkConfig').virtualNetwork]",
            "vmSizeSelector": "[steps('tailscale').vmSizeSelector]",
            "tsVmName": "[steps('tailscale').tsVmName]",
            "tsPreAuthKey": "[steps('tailscale').tsPreAuthKey]",
            "tsRoutedSubnets": "[steps('tailscale').tsRoutedSubnets]",
            "tagsByResource": "[steps('tags').tagsByResource]"
        }
    }
}
